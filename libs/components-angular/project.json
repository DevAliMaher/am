{
  "name": "components-angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/components-angular/src",
  "prefix": "am",
  "tags": ["components-angular"],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/components-angular/ng-package.json",
        "tailwindConfig": "libs/components-angular/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/components-angular/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/components-angular/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/components-angular/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/components-angular/**/*.ts",
          "libs/components-angular/**/*.html",
          "libs/components-angular/package.json"
        ]
      }
    }
  }
}
