{
  "name": "tailwind",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/tailwind/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/tailwind",
        "tsConfig": "libs/tailwind/tsconfig.lib.json",
        "packageJson": "libs/tailwind/package.json",
        "main": "libs/tailwind/src/index.ts",
        "assets": [
          "libs/tailwind/*.md",
          "libs/tailwind/src/lib/scss/_styles.scss"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs tailwind {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/tailwind/**/*.ts",
          "libs/tailwind/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/tailwind/jest.config.ts"
      }
    }
  },
  "tags": ["tailwind"]
}
